<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid
                android:color="#EEEEEE">
            </solid>
            <stroke
                android:width="1dp"
                android:color="#000">
            </stroke>
            <corners
                android:radius="12dp" >
            </corners>
        </shape>

    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid
                android:color="#dc262c" >
            </solid>
            <stroke
                android:width="1dp"
                android:color="#000">
            </stroke>
            <corners
                android:radius="12dp">
            </corners>
        </shape>
    </item>
</selector>