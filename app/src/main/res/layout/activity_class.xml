<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="18dp">

        <ImageView
            android:id="@+id/iv_class"
            android:layout_width="36dp"
            android:layout_height="36dp"/>

        <TextView
            android:id="@+id/tv_classname"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/iv_class"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="消费"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tv_classdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/tv_classname"
            android:layout_marginTop="14dp"
            android:textColor="#888888"
            android:text="1201-1231"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_classmoney"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorRed"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:text="消费"
            android:textSize="20sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000" />

    <ListView
        android:id="@+id/listview_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>