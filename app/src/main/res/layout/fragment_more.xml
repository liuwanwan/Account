<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@mipmap/bg_leave">

        <ImageView
            android:id="@+id/civ_portrait"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/black_man" />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/civ_portrait"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="未命名"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_kuang_grey"
            android:drawableTop="@mipmap/more_setting"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="设置"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_sync"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_kuang_grey"
            android:drawableTop="@mipmap/more_upload"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="同步"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_help"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_kuang_grey"
            android:drawableTop="@mipmap/more_help"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="帮助"
            android:textColor="#000"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_theme"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_kuang_grey"
            android:drawableTop="@mipmap/more_theme"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="主题"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_response"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_kuang_grey"
            android:drawableTop="@mipmap/more_response"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="反馈"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_note"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_kuang_grey"
            android:drawableTop="@mipmap/more_resume"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="说明"
            android:textColor="#000"
            android:textSize="18sp" />

    </LinearLayout>


</LinearLayout>