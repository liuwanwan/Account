<?xml version="1.0" encoding="utf-8"?>
<com.liuwanwan.accountbook.utils.SlideLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
		android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/iv_assetitemtype"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="36dp"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/tv_assetitemname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/iv_assetitemtype"
            android:text="支付宝" />
        <TextView
            android:id="@+id/tv_assetitemmoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="36dp"
            android:text="text" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="144dp"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_slidedel"
            android:background="#dddddd"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="删除"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_slideedit"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:background="#aaaaaa"
            android:gravity="center"
            android:text="编辑"
            android:textColor="#000000" />
    </LinearLayout>
</com.liuwanwan.accountbook.utils.SlideLayout>
